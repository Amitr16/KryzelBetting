# GoalServe Sports Betting Platform - Environment Variables

# NOTE: No GoalServe API key needed! 
# The access token is already embedded in the feed URLs.
# The platform automatically discovers sports and adapts to new data.

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# Database Configuration
DATABASE_URL=sqlite:///betting.db

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Auto Settlement Configuration
SETTLEMENT_INTERVAL_MINUTES=5
ENABLE_AUTO_SETTLEMENT=True

# Default User Settings
DEFAULT_USER_BALANCE=1000.00
MINIMUM_BET_AMOUNT=1.00
MAXIMUM_BET_AMOUNT=10000.00

